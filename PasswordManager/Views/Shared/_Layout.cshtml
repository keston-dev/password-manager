<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - PasswordManager</title>
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/tailwind.css" asp-append-version="true" />
</head>
<body class="flex flex-col min-h-screen overflow-hidden bg-zinc-400">
    <header class="bg-zinc-900 text-white border-zinc-600 border-b-2">
        <nav class="container mx-auto px-4">
            <div class="flex items-center justify-between h-16">
                <a class="text-xl font-bold hover:text-zinc-300 transition-colors" 
                  asp-controller="Home" 
                  asp-action="Index">
                    Password Manager
                </a>
                <button class="md:hidden p-2 rounded-md hover:bg-zinc-700 focus:outline-none focus:ring-2 focus:ring-zinc-500" 
                        type="button" 
                        id="mobile-menu-button"
                        aria-expanded="false" 
                        aria-label="Toggle navigation">
                    <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16"></path>
                    </svg>
                </button>
                
                <div class="hidden md:flex md:items-center md:space-x-6">
                    <ul class="flex space-x-6">
                        <li>
                            <a class="text-white hover:text-gray-500 transition-colors" 
                              asp-controller="Home" 
                              asp-action="Index">
                                Home
                            </a>
                        </li>
                        <li>
                            <a class="text-white hover:text-gray-500 transition-colors" 
                              asp-controller="Home" 
                              asp-action="Privacy">
                                Privacy
                            </a>
                        </li>
                    </ul>
                </div>
            </div>
            
            <div class="hidden md:hidden pb-4" id="mobile-menu">
                <ul class="space-y-2">
                    <li>
                        <a class="block py-2 transition-colors text-white hover:text-gray-500" 
                          asp-controller="Home" 
                          asp-action="Index">
                            Home
                        </a>
                    </li>
                    <li>
                        <a class="block py-2 transition-colors text-white hover:text-gray-500" 
                          asp-controller="Home" 
                          asp-action="Privacy">
                            Privacy
                        </a>
                    </li>
                </ul>
            </div>
        </nav>
    </header>
    
    <div class="flex flex-1 overflow-hidden">

        <aside class="w-40 relative flex min-h-full md:w-60 border-r-2 border-zinc-600 bg-zinc-900 overflow-auto">
            <div class="flex w-full shrink-0 flex-col items-center text-white">
              @await RenderSectionAsync("Sidebar", required:false)
            </div>
        </aside>

        <main class="flex-1 overflow-auto bg-zinc-800 p-8">
            @RenderBody()
        </ma>

    </div> 

    <footer class="border-t-2 border-zinc-600 text-gray-500 py-4 bg-zinc-900">
        <div class="container mx-auto px-4 text-center">
            &copy; 2026 - PasswordManager - 
            <a class="hover:text-gray-300 transition-colors"  
                asp-controller="Home" 
                asp-action="Privacy">
                Privacy
            </a>
        </div>
    </footer>
    
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
        
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>